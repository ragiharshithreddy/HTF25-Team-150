# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ==============================================
# APPLICATION
# ==============================================
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# ==============================================
# DATABASE
# ==============================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin123
MONGO_DATABASE=project_allocation
MONGODB_URI=mongodb://admin:admin123@mongodb:27017/project_allocation?authSource=admin

# ==============================================
# REDIS
# ==============================================
REDIS_URL=redis://redis:6379

# ==============================================
# JWT AUTHENTICATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-change-in-production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# ==============================================
# BLOCKCHAIN (Polygon Mumbai Testnet)
# ==============================================
BLOCKCHAIN_NETWORK=polygon-mumbai
BLOCKCHAIN_RPC_URL=https://rpc-mumbai.maticvigil.com
BLOCKCHAIN_PRIVATE_KEY=your-wallet-private-key-here
BLOCKCHAIN_CONTRACT_ADDRESS=your-deployed-contract-address

# For Mainnet (Production):
# BLOCKCHAIN_NETWORK=polygon-mainnet
# BLOCKCHAIN_RPC_URL=https://polygon-rpc.com

# ==============================================
# IPFS (Decentralized Storage)
# ==============================================
IPFS_HOST=ipfs.infura.io
IPFS_PORT=5001
IPFS_PROTOCOL=https
IPFS_PROJECT_ID=your-infura-project-id
IPFS_PROJECT_SECRET=your-infura-project-secret

# Alternative: Use Pinata
# PINATA_API_KEY=your-pinata-api-key
# PINATA_SECRET_KEY=your-pinata-secret-key

# ==============================================
# EMAIL NOTIFICATIONS (NodeMailer)
# ==============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=Project Allocation System <noreply@projectallocation.com>

# For Gmail: Enable 2FA and create App Password
# https://myaccount.google.com/apppasswords

# ==============================================
# SMS NOTIFICATIONS (Twilio)
# ==============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Sign up: https://www.twilio.com/try-twilio

# ==============================================
# CERTIFICATE ENCRYPTION
# ==============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CERTIFICATE_ENCRYPTION_KEY=generate-64-character-hexadecimal-key-using-crypto-randomBytes-32

# ==============================================
# FILE UPLOADS
# ==============================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ==============================================
# ANTI-CHEAT SYSTEM
# ==============================================
ANTI_CHEAT_ENABLED=true
MAX_VIOLATIONS=3
BAN_DURATION_DAYS=30

# ==============================================
# FRONTEND
# ==============================================
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000
REACT_APP_BLOCKCHAIN_EXPLORER=https://mumbai.polygonscan.com

# ==============================================
# THIRD-PARTY INTEGRATIONS
# ==============================================

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Cloudinary (For Image Storage)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ==============================================
# MONITORING & ANALYTICS (Optional)
# ==============================================
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
